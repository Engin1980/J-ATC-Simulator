<?xml version="1.0" encoding="utf-8" ?>
<settings
        xmlns="https://github.com/Engin1980/J-ATC-Simulator/appSettings"
>
  <soundFolder>$app$/_Sounds</soundFolder>
  <logFolder>./temp/$time$/</logFolder>
  <startupSettingsFile>$app$/_SettingFiles/defaultStartupSettings.ss.xml</startupSettingsFile>
  <stripSettingsFile>$app$/_SettingFiles/stripSettings.at.xml</stripSettingsFile>
  <speechFormatterFile>$app$/_SettingFiles/speechResponses.fm.xml</speechFormatterFile>
  <stats blockIntervalSize="10" />
  <radar>
    <styleSettingsFile>$app$/_SettingFiles/radarStyleSettingsInconsolataBig.at.xml</styleSettingsFile>
    <!--<styleSettingsFile>$app$/_SettingFiles/radarStyleSettingsArialUnicodeMt.at.xml</styleSettingsFile>-->
    <displayTextDelay>30</displayTextDelay>
    <displaySettings tma="true" country="false" mrva="true" mrvaLabel="true" ctr="true" vor="true" ndb="true"
                     airport="true" sid="true" star="true"
                     fix="true" routeFix="true" minorFix="false" rings="true" history="true" headingLine="true"
                     minAltitude="0" maxAltitude="99000"/>
  </radar>
  <autosave intervalInMinutes="15" path="./temp/jatcAutoSave" />
</settings>