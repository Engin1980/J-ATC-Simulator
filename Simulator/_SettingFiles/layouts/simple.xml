<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<windows xmlns="https://github.com/Engin1980/J-ATC-Simulator/layout">

    <window title="Main radar view" style="maximized" withMenu="true" onCloseQuit="true">
        <position x="0px" y="0px" width="80%" height="80%"/>
        <column width="225px">
            <panel view="flightListView"/>
        </column>
        <column width="*">
            <row height="*">
                <panel view="radarView">
                    <option key="showMessages" value="true"/>
                </panel>
            </row>
            <row height="30px">
                <panel view="textInputView">
                    <option key="stealKeyFrom" value="*"/>
                </panel>
            </row>
        </column>
        <column width="225px">
            <row height="*">
                <panel view="scheduledListView"/>
            </row>
            <row height="225px">
                <panel view="smallStatsView"/>
            </row>
        </column>
    </window>

    <window title="Additional radar view" style="hidden">
        <position x="0px" y="0px" width="400px" height="400px"/>
        <panel view="radarView"/>
    </window>

    <window title="Log view" style="hidden">
        <position x="0px" y="0px" width="400px" height="300px" />
        <panel view="appLogView" />
    </window>
</windows>
