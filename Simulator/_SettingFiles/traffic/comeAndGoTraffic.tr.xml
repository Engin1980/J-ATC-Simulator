    <countries>
      <country icao="OK" weight="4"/>
      <country icao="OM" weight="3"/>
      <country icao="PL" weight="1"/>
      <country icao="DE" weight="1"/>
      <country icao="AT" weight="1"/>
    </countries>
    <density>
      <item hour="0" departures="0" arrivals="0"/>
      <item hour="1" departures="2" arrivals="0"/>
      <item hour="2" departures="0" arrivals="3"/>
      <item hour="3" departures="1" arrivals="0"/>
